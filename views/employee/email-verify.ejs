<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>EMS | Verification</title>
    <link rel="stylesheet" href="css/employees/login.css" />
  </head>
  <body>
    <% if(typeof message !== 'undefined'){ %>
    <h4><%= message %></h4>
    <% } %>

    <div class="wrapper">
      <div class="title">Email Verification</div>
      <form action="" method="post">
        <br />
        <div class="field">
          <input type="email" name="email" id="" />
          <label>Email</label>
        </div>
        <br /><br />
        <div class="field">
          <input type="submit" value="Sent link" />
        </div>
      </form>
    </div>
  </body>
</html>
