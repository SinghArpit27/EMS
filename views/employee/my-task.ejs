<!DOCTYPE html>
<html>
<head>
    <title>EMS | My Tasks</title>
    <link rel="stylesheet" href="css/superAdmin/adminAndEmploy.css" />
    <link rel="stylesheet" href="/css/employees/employeeDashboard.css" />
    <!-- <link rel="stylesheet" href="/css/employees/myProfile.css" /> -->

    <!-- other styling link -->
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
    />

    <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"
    ></script>
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.12/typed.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>


</head>
<body>

    <!-- header navbar -->
    <nav class="navbar">
        <div class="max-width">
          <div class="menu-btn">
            <i class="fas fa-bars"></i>
          </div>
          <div class="logo">
            <a href="#">EM<span>S</span></a>
          </div>
          <ul class="menu">
            <li>
              <a href="/dashboard" class="menu-btn" aria-current="page">Home</a>
            </li>
            <li><a href="/empDetails" class="menu-btn">Employee Details</a></li>
            <li>
              <a href="/employee-portal/<%= user._id %>" class="menu-btn"
                >My Portal</a
              >
            </li>
            <li><a href="/employ-tasks" class="menu-btn">My Task</a></li>
          </ul>
          <!-- <div class="profile-pic"> -->
          <img
            src="/uploads/employeeImages/<%= user.empImg %>"
            alt="<%= user.empImg %>"
            class="profile-pic"
            onclick="toggleMenu()"
          />
          <!-- <img src="arpit.jpg" class="profile-pic" onclick="toggleMenu()"> -->
          <!-- </div> -->
  
          <div class="sub-menu-wrap" id="subMenu">
            <div class="sub-menu">
              <div class="user-info">
                <img
                  src="/uploads/employeeImages/<%= user.empImg %>"
                  class="profile-pic"
                />
                <h3><%= user.name %> <br />E-Code ( <%= user.empCode %> )</h3>
              </div>
              <hr />
              <a href="/editProfile?id=<%= user._id %>" class="sub-menu-link">
                <i class="fa fa-user" aria-hidden="true"></i>
                <p>Edit Profile</p>
                <!-- <span>></span> -->
              </a>
              <a href="#" class="sub-menu-link">
                <i class="fa fa-envelope" aria-hidden="true"></i>
                <p><%= user.email %></p>
              </a>
              <a href="#" class="sub-menu-link">
                <i class="fas fa-mobile-alt"></i>
                <p><%= user.phone %></p>
              </a>
              <a href="#" class="sub-menu-link">
                <i class="fas fa-sign-out-alt"></i>
                <p><%= user.empJobTitle %></p>
                <!-- <span>></span> -->
              </a>
              <a href="/logout" class="sub-menu-link">
                <i class="fas fa-sign-out-alt"></i>
                <p>Logout</p>
                <!-- <span>></span> -->
              </a>
            </div>
          </div>
        </div>
      </nav>


    <h1 id="task-main-title">My Tasks</h1>
    <p id="task-main-title-name">Welcome, <%= admin.name %></p>

    <div class="table-container">
        <div class="table_responsive">
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Created By</th>
                        <th>Deadline</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% tasks.forEach(task => { %>
                        <tr>
                            <td><%= task.title %></td>
                            <td><%= task.description %></td>
                            <td><%= task.createdBy.name %></td>
                            <td><%= task.deadline %></td>
                            <td><%= task.status %></td>
                            <td>
                                <form action="/update-task-status/<%= task._id %>" method="post">
                                    <select name="status" id="select-option-status">
                                        <option value="Not Started">Not Started</option>
                                        <option value="In Progress">In Progress</option>
                                        <option value="Completed">Completed</option>
                                    </select>
                                    <button type="submit" id="select-option-status-btn">Update</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="/js/employees/home.js"></script>
</body>
</html>
