<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Dashboard</title>
    <link rel="stylesheet" href="/css/employees/employeeDashboard.css" />

    <link rel="stylesheet" href="/css/employees/myProfile.css" />

    <!-- other styling link -->

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.12/typed.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
  </head>
  <body>
    <!-- Header Navbar -->
    <nav class="navbar">
      <div class="max-width">
        <div class="menu-btn">
          <i class="fas fa-bars"></i>
        </div>
        <div class="logo">
          <a href="#">EM<span>S</span></a>
        </div>
        <ul class="menu">
          <li>
            <a href="/dashboard" class="menu-btn" aria-current="page">Home</a>
          </li>
          <li><a href="/empDetails" class="menu-btn">Employee Details</a></li>
          <li><a href="/employee-portal/<%= user._id %>" class="menu-btn">My Portal</a></li>
          <li><a href="#" class="menu-btn">Contact</a></li>
        </ul>
        <img
          src="/uploads/employeeImages/<%= user.empImg %>"
          alt="<%= user.empImg %>"
          class="profile-pic"
          onclick="toggleMenu()"
        />

        <div class="sub-menu-wrap" id="subMenu">
          <div class="sub-menu">
            <div class="user-info">
              <img
                src="/uploads/employeeImages/<%= user.empImg %>"
                class="profile-pic"
              />
              <h3><%= user.name %> <br />E-Code ( <%= user.empCode %> )</h3>
            </div>
            <hr />
            <a href="/editProfile?id=<%= user._id %>" class="sub-menu-link">
              <i class="fa fa-user" aria-hidden="true"></i>
              <p>Edit Profile</p>
            </a>
            <a href="#" class="sub-menu-link">
              <i class="fa fa-envelope" aria-hidden="true"></i>
              <p><%= user.email %></p>
            </a>
            <a href="#" class="sub-menu-link">
              <i class="fas fa-mobile-alt"></i>
              <p><%= user.phone %></p>
            </a>
            <a href="#" class="sub-menu-link">
              <i class="fas fa-sign-out-alt"></i>
              <p><%= user.empJobTitle %></p>
            </a>
            <a href="/logout" class="sub-menu-link">
              <i class="fas fa-sign-out-alt"></i>
              <p>Logout</p>
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- home/hero section -->
    <section class="home" id="home">
        <div class="card">
            <h1 id="welcome">Welcome to Your Employee Portal</h1>
            <div id="employee-details">
                <h2 class="section-title">Project Manager</h2>
                <div class="profile">
                    <img src="/uploads/employeeImages/<%= employee.empImg %>" class="profile-pic-team" alt="Profile Picture">
                    <p class="profile-info"><span id="employee-name"><%= teamInfo.projectManager.name %></span></p>
                    <p class="profile-info">E-Code: <%= teamInfo.projectManager.empCode %></p>
                    <p class="profile-info"><%= teamInfo.projectManager.empJobTitle %></p>
                </div>
            </div>
        </div>

        <% if (teamInfo) { %>
            <div class="card">
                <h2 class="section-title">Team Information</h2>
                <p class="team-info">Team Name: <span id="team-name"><%= teamInfo.name %></span></p>
                <div class="team-members">
                    <% for (const member of teamInfo.members) { %>
                        <div class="member-card">
                            <img src="/uploads/employeeImages/<%= member.empImg %>" class="profile-pic-team" alt="Profile Picture">
                            <h3 class="member-name"><%= member.name %></h3>
                            <p class="member-info">E-Code: <span><%= member.empCode %></span></p>
                            <p class="member-info"><%= member.empJobTitle %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <p class="card">You are not part of any team.</p>
        <% } %>
    </section>

    <script src="/js/employees/home.js"></script>
  </body>
</html>
